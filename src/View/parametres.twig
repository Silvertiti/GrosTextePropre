{% extends "layout.html.twig" %}

{% block style %}
  :root {
    --sidebar-width: 250px;
    --sidebar-collapsed-width: 70px;
    --sidebar-bg: #1e1e1e;
    --sidebar-active-border: #ff6b6b;
    --tablet-breakpoint: 768px;
    --mobile-breakpoint: 576px;
  }

  /* ----- Sidebar Responsive ----- */
  .sidebar {
    background-color: var(--sidebar-bg);
    color: #fff;
    min-height: 100vh;
    padding-top: 1rem;
    transition: all 0.3s;
    width: var(--sidebar-width);
    position: relative;
    z-index: 1000;
  }

  .sidebar .nav-link {
    color: #ccc;
    padding: 0.75rem 1rem;
    font-size: 0.95rem;
    white-space: nowrap;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .sidebar .nav-link i {
    font-size: 1.1rem;
    min-width: 24px;
    text-align: center;
  }

  .sidebar .nav-link.active,
  .sidebar .nav-link:hover {
    background-color: #2a2a2a;
    color: #fff;
    border-left: 4px solid var(--sidebar-active-border);
  }

  /* ----- Main Content ----- */
  .main-content {
    padding: 1.5rem;
    width: 100%;
  }

  .section-title {
    font-size: clamp(1.25rem, 3vw, 1.5rem);
    margin-bottom: 1.25rem;
    color: #333;
    font-weight: 600;
  }

  /* ----- Tables Responsive ----- */
  .table-responsive {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  .table {
    min-width: 600px;
  }

  .table td, .table th {
    vertical-align: middle;
  }

  /* ----- Buttons & Forms ----- */
  .btn-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.85rem;
  }

  .form-control {
    padding: 0.5rem 0.75rem;
    font-size: 0.95rem;
  }

  /* ----- Layout Adaptations ----- */
  @media (max-width: 991.98px) {
    .sidebar {
      width: var(--sidebar-collapsed-width);
      overflow: hidden;
    }
    .sidebar .nav-link span {
      display: none;
    }
    .sidebar .nav-link {
      justify-content: center;
      padding: 0.75rem 0.5rem;
    }
  }

  @media (max-width: 767.98px) {
    .sidebar {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      height: auto;
      min-height: unset;
      width: 100%;
      display: flex;
      padding-top: 0;
      z-index: 1000;
    }
    .sidebar .nav-link {
      flex-direction: column;
      padding: 0.5rem;
      font-size: 0.75rem;
      border-left: none;
      border-top: 4px solid transparent;
    }
    .sidebar .nav-link.active,
    .sidebar .nav-link:hover {
      border-left: none;
      border-top: 4px solid var(--sidebar-active-border);
    }
    .sidebar .nav-link i {
      font-size: 1rem;
    }
    .main-content {
      padding: 1rem;
      margin-bottom: 60px; /* Espace pour le sidebar mobile */
    }
  }

  @media (max-width: 575.98px) {
    .main-content {
      padding: 0.75rem;
    }
    .btn-group {
      flex-wrap: wrap;
      gap: 0.25rem;
    }
    .btn {
      flex: 1 1 auto;
      min-width: 100%;
    }
  }

  /* ----- Badges ----- */
  .badge {
    font-size: 0.75rem;
    padding: 0.35em 0.65em;
  }

  /* ----- Utility Classes ----- */
  .gap-1 {
    gap: 0.5rem;
  }
  .d-flex {
    display: flex;
  }
{% endblock %}

{% block content %}
<div class="container-fluid p-0">
  <div class="row g-0">
    <!-- Sidebar -->
    <nav class="col-lg-2 sidebar">
      <a href="#profile" class="nav-link active">
        <i class="bi bi-person"></i>
        <span>Gestion du Compte</span>
      </a>

      {% if session.role == 'admin' %}
        <a href="#entreprise" class="nav-link">
          <i class="bi bi-building"></i>
          <span>Gestion entreprises</span>
        </a>
        <a href="#stage" class="nav-link">
          <i class="bi bi-briefcase"></i>
          <span>Gestion Offres</span>
        </a>
        <a href="#promotion" class="nav-link">
          <i class="bi bi-people"></i>
          <span>Pilotes promotion</span>
        </a>
        <a href="#étudiants" class="nav-link">
          <i class="bi bi-mortarboard"></i>
          <span>Gestion étudiants</span>
        </a>
        <a href="#candidature" class="nav-link">
          <i class="bi bi-file-earmark-text"></i>
          <span>Candidatures</span>
        </a>
      {% endif %}
    </nav>

    <div class="col-lg-10">
      <div class="main-content">
        <div id="profile">
          <h1 class="section-title">Profil</h1>
          <p>Modifier vos informations personnelles ici.</p>
        </div>

        {% if session.role == 'admin' %}
        <div id="entreprise" style="display:none">
          <h1 class="section-title">Gestion entreprises</h1>
          <p>Changer votre mot de passe actuel.</p>
        </div>

        <div id="stage" style="display: none">
          <h1 class="section-title">Gestion Offres de stage</h1>

          <div class="mb-3">
            <input type="text" id="searchInput" class="form-control" placeholder="Rechercher un stage par titre ou entreprise...">
          </div>

          {% if offres is not empty %}
            <div class="table-responsive">
              <table class="table table-bordered" id="stagesTable">
                <thead class="table-light">
                  <tr>
                    <th>Titre</th>
                    <th>Entreprise</th>
                    <th>Disponibilité</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  {% for offre in offres %}
                    <tr>
                      <td>{{ offre.getTitre() }}</td>
                      <td>{{ offre.getEntreprise() }}</td>
                      <td>
                        {% if offre.isDisponible() %}
                          <span class="badge bg-success">Disponible</span>
                        {% else %}
                          <span class="badge bg-secondary">Indisponible</span>
                        {% endif %}
                      </td>
                      <td>
                        <div class="d-flex gap-1 flex-wrap">
                          <a href="/stages/{{ offre.getId() }}/edit" class="btn btn-sm btn-success">
                            <i class="bi bi-pencil"></i>
                          </a>
                          <form method="POST" action="/stages/{{ offre.getId() }}/delete" onsubmit="return confirm('Supprimer ce stage ?');">
                            <button type="submit" class="btn btn-sm btn-danger">
                              <i class="bi bi-trash"></i>
                            </button>
                          </form>
                        </div>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          {% else %}
            <div class="alert alert-info">Aucune offre disponible.</div>
          {% endif %}
        </div>

        <div id="promotion" style="display:none">
          <h1 class="section-title">Gestion Pilotes de promotion</h1>
          
          <div class="mb-3">
            <input type="text" id="searchPiloteInput" class="form-control" placeholder="Rechercher un pilote...">
          </div>

          {% if tuteurs is not empty %}
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  {% for tuteur in tuteurs %}
                    <tr>
                      <td>{{ loop.index }}</td>
                      <td>{{ tuteur.getNom() }}</td>
                      <td>{{ tuteur.getPrenom() }}</td>
                      <td>{{ tuteur.getEmail() }}</td>
                      <td>
                        <a href="/pilote/{{ tuteur.getId() }}" class="btn btn-primary btn-sm">
                          <i class="bi bi-eye"></i>
                        </a>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          {% else %}
            <div class="alert alert-info">Aucun pilote trouvé.</div>
          {% endif %}
        </div>

        <div id="étudiants" style="display:none">
          <h1 class="section-title">Gestion étudiants</h1>

          <div class="mb-3">
            <input type="text" id="searchStudentInput" class="form-control" placeholder="Rechercher un étudiant...">
          </div>

          {% if students is not empty %}
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  {% for student in students %}
                    <tr>
                      <td>{{ loop.index }}</td>
                      <td>{{ student.getNom() }}</td>
                      <td>{{ student.getPrenom() }}</td>
                      <td>{{ student.getEmail() }}</td>
                      <td>
                        <a href="/etudiant/{{ student.getId() }}" class="btn btn-primary btn-sm">
                          <i class="bi bi-eye"></i>
                        </a>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          {% else %}
            <div class="alert alert-info">Aucun étudiant trouvé.</div>
          {% endif %}
        </div>

        <div id="candidature" style="display:none">
          <h1 class="section-title">Gestion Candidature</h1>
          <p>Activer l'authentification à deux facteurs et voir l'activité de connexion.</p>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Gestion des onglets
    const links = document.querySelectorAll('.nav-link');
    const sections = document.querySelectorAll('.main-content > div');

    links.forEach(link => {
      link.addEventListener('click', e => {
        e.preventDefault();

        links.forEach(l => l.classList.remove('active'));
        link.classList.add('active');

        sections.forEach(sec => sec.style.display = 'none');
        const target = document.querySelector(link.getAttribute('href'));
        if (target) target.style.display = 'block';
      });
    });

    // Recherche dans les tables
    function setupTableSearch(inputId, tableSelector) {
      const searchInput = document.getElementById(inputId);
      if (searchInput) {
        searchInput.addEventListener('keyup', function () {
          const value = this.value.toLowerCase();
          const rows = document.querySelectorAll(`${tableSelector} tbody tr`);

          rows.forEach(row => {
            const rowText = row.textContent.toLowerCase();
            row.style.display = rowText.includes(value) ? '' : 'none';
          });
        });
      }
    }

    setupTableSearch('searchInput', '#stagesTable');
    setupTableSearch('searchPiloteInput', '#promotion table');
    setupTableSearch('searchStudentInput', '#étudiants table');

    // Adaptation mobile
    function handleSidebarResize() {
      if (window.innerWidth < 768) {
        document.body.style.paddingBottom = '60px';
      } else {
        document.body.style.paddingBottom = '0';
      }
    }

    window.addEventListener('resize', handleSidebarResize);
    handleSidebarResize();
  });
</script>
{% endblock %}