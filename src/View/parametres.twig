{% extends "layout.html.twig" %}

{% block style %}
  .sidebar {
    background-color: #1e1e1e;
    color: #fff;
    height: 100vh;
    padding-top: 2rem;
  }
  .sidebar .nav-link {
    color: #ccc;
    padding: 1rem;
    font-size: 1rem;
  }
  .sidebar .nav-link.active,
  .sidebar .nav-link:hover {
    background-color: #2a2a2a;
    color: #fff;
    border-left: 4px solid #ff6b6b;
  }
  .main-content {
    padding: 2rem;
  }
  .section-title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #333;
  }
{% endblock %}

{% block content %}
<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <nav class="col-md-2 sidebar d-flex flex-column">
      <a href="#profile" class="nav-link active">Gestion du Compte</a>

      {% if session.role == 'admin' %}
        <a href="#entreprise" class="nav-link">Gestion entreprises</a>
        <a href="#stage" class="nav-link">Gestion Offres de stage</a>
        <a href="#promotion" class="nav-link">Gestion Pilotes de promotion</a>
        {% endif %}
        {% if session.role == 'admin' or session.role == 'tuteur' %}
        <a href="#étudiants" class="nav-link">Gestion étudiants</a>
        {% endif %}
        {% if session.role == 'admin' or session.role == 'etudiant' or session.role == 'tuteur' %}
        <a href="#candidature" class="nav-link">Gestion Candidature</a>
        {% endif %}

    </nav>

    <!-- Content -->
    <div class="col-md-10 p-0">
      <div class="main-content">
        <div id="profile">
        <div class="section-title">Profil</div>
        <form method="POST" action="/parametres">
                <div class="mb-3">
                    <label for="prenom" class="form-label">Prénom</label>
                    <input type="text" class="form-control" name="prenom" id="prenom" value="{{ user.prenom }}" required />
                </div>

                <div class="mb-3">
                    <label for="nom" class="form-label">Nom</label>
                    <input type="text" class="form-control" name="nom" id="nom" value="{{ user.nom }}" required />
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Adresse email</label>
                    <input type="email" class="form-control" name="email" id="email" value="{{ user.email }}" required />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Nouveau mot de passe</label>
                    <input type="password" class="form-control" name="password" id="password" />
                </div>

                <div class="mb-3">
                    <label for="confirm_password" class="form-label">Confirmer le mot de passe</label>
                    <input type="password" class="form-control" name="confirm_password" id="confirm_password" />
                </div>

                <button type="submit" class="btn btn-primary">Mettre à jour</button>
            </form>
          </div>
        </div>
        </div>

        {% if session.role == 'admin' or session.role == 'etudiant' or session.role == 'tuteur' %}
        <div id="entreprise" style="display:none">
          <div class="section-title">Gestion Entreprises</div>

          <div class="mb-3 d-flex justify-content-between align-items-center">
            <input type="text" id="searchEntrepriseInput" class="form-control me-3" placeholder="Rechercher une entreprise...">
            <a href="/entreprises/create" class="btn btn-warning">Ajouter</a>
          </div>

          {% if entreprises is not empty %}
            <table class="table table-bordered" id="entreprisesTable">
              <thead>
                <tr>
                  <th>Nom</th>
                  <th>Email</th>
                  <th>Téléphone</th>
                  <th>SIRET</th>
                  <th>Note</th>
                  <th>Vues</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {% for entreprise in entreprises %}
                  <tr>
                    <td>{{ entreprise.getNom() }}</td>
                    <td>{{ entreprise.getEmail() }}</td>
                    <td>{{ entreprise.getNumeroTelephone() }}</td>
                    <td>{{ entreprise.getSIRET() }}</td>
                    <td>{{ entreprise.getNoteEvaluation() }}</td>
                    <td>{{ entreprise.getVues() }}</td>
                    <td class="d-flex gap-2">
                      <a href="/entreprises/{{ entreprise.getId() }}/edit" class="btn btn-sm btn-success">Modifier</a>
                      <form method="POST" action="/entreprises/{{ entreprise.getId() }}/delete" onsubmit="return confirm('Supprimer cette entreprise ?');">
                        <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                      </form>
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          {% else %}
            <div class="alert alert-info">Aucune entreprise trouvée.</div>
          {% endif %}
        </div>


      <div id="stage" style="display: none">
        <div class="section-title">Gestion Offres de stage</div>

        <div class="mb-3 d-flex justify-content-between align-items-center">
          <input type="text" id="searchInput" class="form-control me-3" placeholder="Rechercher un stage par titre ou entreprise...">
          <a href="/addjob" class="btn btn-warning">Ajouter</a>
        </div>

          {% if offres is not empty %}
            <table class="table table-bordered" id="stagesTable">
              <thead>
                <tr>
                  <th>Titre</th>
                  <th>Entreprise</th>
                  <th>Vues</th>
                  <th>Disponibilité</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                {% for offre in offres %}
                  <tr>
                    <td>{{ offre.getTitre() }}</td>
                    <td>{{ entreprisesParId[offre.getEntreprise()]|default('Entreprise inconnue') }}</td>
                    <td>{{ vuesParStage[offre.getId()]|default(0) }} vue{{ vuesParStage[offre.getId()] == 1 ? '' : 's' }}</td>

                    <td>
                      {% if offre.isDisponible() %}
                        <span class="badge bg-success">Disponible</span>
                      {% else %}
                        <span class="badge bg-secondary">Indisponible</span>
                      {% endif %}
                    </td>
                    <td class="d-flex gap-2">
                      <a href="/stages/{{ offre.getId() }}/edit" class="btn btn-sm btn-success">
                        Modifier
                      </a>

                      <form method="POST" action="/stages/{{ offre.getId() }}/delete" onsubmit="return confirm('Supprimer ce stage ?');">
                        <button type="submit" class="btn btn-sm btn-danger">
                          Supprimer
                        </button>
                        
                      </form>
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          {% else %}
            <div class="alert alert-info">Aucune offre disponible.</div>
          {% endif %}
        </div>




      <div id="promotion" style="display:none">
        <div class="section-title">Gestion Pilotes de promotion</div>

        <div class="mb-3 d-flex justify-content-between align-items-center">
          <input type="text" id="searchTuteurInput" class="form-control me-3" placeholder="Rechercher un pilote par nom ou email...">
          <a href="/register" class="btn btn-warning">Ajouter</a>
        </div>

          {% if tuteurs is not empty %}
            <table class="table table-bordered" id="tuteursTable">
              <thead>
                <tr>
                  <th>Prénom</th>
                  <th>Nom</th>
                  <th>Email</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                {% for tuteur in tuteurs %}
                  <tr>
                    <td>{{ tuteur.getPrenom() }} </td>
                    <td>{{ tuteur.getNom() }}</td>
                    <td>{{ tuteur.getEmail() }}</td>
                    <td class="d-flex gap-2">
                        <a href="/users/{{ tuteur.getId() }}/edit" class="btn btn-sm btn-success">
                          Modifier
                        </a>
                      <form method="POST" action="/users/{{ tuteur.getId() }}/delete" onsubmit="return confirm('Supprimer ce tuteur ?');">
                        <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                      </form>
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          {% else %}
            <div class="alert alert-info">Aucun tuteur trouvé.</div>
          {% endif %}
        </div>


        <div id="étudiants" style="display:none">
          <div class="section-title">Gestion étudiants</div>

          <div class="mb-3 d-flex justify-content-between align-items-center">
            <input type="text" id="searchStudentInput" class="form-control me-3" placeholder="Rechercher un étudiant par nom ou email...">
            <a href="/register" class="btn btn-warning">Ajouter</a>
          </div>


            {% if students is not empty %}
              <table class="table table-bordered" id="studentsTable">
                <thead>
                  <tr>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  {% for student in students %}
                    <tr>
                      <td>{{ student.getPrenom() }}</td> 
                      <td>{{ student.getNom() }}</td>
                      <td>{{ student.getEmail() }}</td>
                      <td class="d-flex gap-2">
                        <a href="/users/{{ student.getId() }}/edit" class="btn btn-sm btn-success">
                          Modifier
                        </a>
                        <form method="POST" action="/users/{{ student.getId() }}/delete" onsubmit="return confirm('Supprimer cet utilisateur ?');">
                          <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                        </form>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            {% else %}
              <div class="alert alert-info">Aucun étudiant trouvé.</div>
            {% endif %}
        </div>


        <div id="candidature" style="display:none">
          <div class="section-title">Gestion Candidature</div>
          <p>Activer l'authentification à deux facteurs et voir l'activité de connexion.</p>
        </div>
        {% endif %}

      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const links = document.querySelectorAll('.sidebar .nav-link');
    const sections = document.querySelectorAll('.main-content > div');

    links.forEach(link => {
      link.addEventListener('click', e => {
        e.preventDefault();
        links.forEach(l => l.classList.remove('active'));
        link.classList.add('active');

        sections.forEach(sec => sec.style.display = 'none');
        const target = document.querySelector(link.getAttribute('href'));
        if (target) target.style.display = 'block';
      });
    });

    const searchInput = document.getElementById('searchInput');
    const rows = document.querySelectorAll('#stagesTable tbody tr');

    if (searchInput) {
      searchInput.addEventListener('keyup', function () {
        const value = this.value.toLowerCase();
        rows.forEach(row => {
          const titre = row.cells[0].textContent.toLowerCase();
          const entreprise = row.cells[1].textContent.toLowerCase();
          row.style.display = (titre.includes(value) || entreprise.includes(value)) ? '' : 'none';
        });
      });
    }

    const studentSearchInput = document.getElementById('searchStudentInput');
    const studentRows = document.querySelectorAll('#studentsTable tbody tr');

    if (studentSearchInput) {
      studentSearchInput.addEventListener('keyup', function () {
        const value = this.value.toLowerCase();
        studentRows.forEach(row => {
          const nom = row.cells[1].textContent.toLowerCase();
          const email = row.cells[2].textContent.toLowerCase();
          row.style.display = (nom.includes(value) || email.includes(value)) ? '' : 'none';
        });
      });
    }
    const searchTuteurInput = document.getElementById('searchTuteurInput');
    const tuteurRows = document.querySelectorAll('#tuteursTable tbody tr');

    if (searchTuteurInput) {
      searchTuteurInput.addEventListener('keyup', function () {
        const value = this.value.toLowerCase();
        tuteurRows.forEach(row => {
          const nom = row.cells[1].textContent.toLowerCase();
          const email = row.cells[2].textContent.toLowerCase();
          row.style.display = (nom.includes(value) || email.includes(value)) ? '' : 'none';
        });
      });
    }
      document.addEventListener("DOMContentLoaded", function () {
      const input = document.getElementById('searchEntrepriseInput');
      const rows = document.querySelectorAll('#entreprisesTable tbody tr');

      if (input) {
        input.addEventListener('keyup', function () {
          const value = this.value.toLowerCase();
          rows.forEach(row => {
            const nom = row.cells[0].textContent.toLowerCase();
            const email = row.cells[1].textContent.toLowerCase();
            row.style.display = (nom.includes(value) || email.includes(value)) ? '' : 'none';
          });
        });
      }
    });
  });

</script>


{% endblock %}
