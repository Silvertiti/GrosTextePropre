{% extends "layout.html.twig" %}

{% block title %}Offres de Stage{% endblock %}

{% block content %}
<section class="container my-5">
    <h1 class="text-center mb-4">Offres de Stage</h1>

    {% if offres is not empty %}
        <div class="row">
            {% for offre in offres %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">
                                {{ offre.getTitre() }}
                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                {{ offre.getEntreprise() }}
                            </h6>
                            <p class="card-text">
                                {{ offre.getDescription()|length > 150 
                                    ? offre.getDescription()[:150] ~ '...' 
                                    : offre.getDescription() 
                                }}
                            </p>
                            <a href="#" class="btn btn-primary">Postuler</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info text-center">
            Aucune offre de stage disponible pour le moment.
        </div>
    {% endif %}
</section>
{% endblock %}
