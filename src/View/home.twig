    padding: 100px 20px;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .hero h1 {
    font-size: 48px;
    font-weight: bold;
    margin-bottom: 20px;
    text-transform: uppercase;
  }

  .hero p {
    font-size: 18px;
    margin-bottom: 30px;
  }

  .btn-attractive {
    background-color: #ffc107;
    color: #000;
    font-size: 20px;
    font-weight: bold;
    border: none;
    padding: 15px 30px;
    border-radius: 8px;
    display: inline-flex;
    align-items: center;
    transition: all 0.3s ease;
    text-transform: uppercase;
  }

  .btn-attractive:hover {
    background-color: #e0a800;
    transform: translateY(-3px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .btn-attractive span {
    margin-left: 10px;
  }
{% endblock %}

