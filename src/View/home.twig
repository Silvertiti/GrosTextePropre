{% block style %}
  body, html {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    width: 100%;
  }

  .hero {
    background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)),
      url(https://static.vecteezy.com/ti/photos-gratuite/p2/16720087-fond-d-ecran-flou-abstrait-conception-de-fond-de-couleur-pour-la-banniere-fond-de-site-web-gratuit-photo.jpg) no-repeat center center;
