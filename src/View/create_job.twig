{% extends "layout.html.twig" %}

{% block title %}Ajouter une offre{% endblock %}

{% block content %}
<div class="container my-5">
    <h1>Ajouter une offre de stage</h1>

    <form method="POST" action="/addjob">
        <div class="mb-3">
            <label for="titre" class="form-label">Titre</label>
            <input type="text" class="form-control" name="titre" required>
        </div>

        <div class="mb-3">
            <label for="entreprise" class="form-label">Entreprise</label>
            <input type="text" class="form-control" name="entreprise" required>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" name="description" rows="4" required></textarea>
        </div>

        <button type="submit" class="btn btn-success">Publier l'offre</button>
    </form>
</div>
{% endblock %}
