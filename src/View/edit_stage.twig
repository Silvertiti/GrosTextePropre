{% extends "layout.html.twig" %}

{% block title %}Modifier une offre{% endblock %}

{% block content %}
<div class="container mt-5">
  <h2>Modifier l'offre</h2>

  <form method="POST" action="/stages/{{ stage.getId() }}/edit">
    <div class="mb-3">
      <label for="titre" class="form-label">Titre</label>
      <input type="text" class="form-control" name="titre" value="{{ stage.getTitre() }}" required>
    </div>

    <div class="mb-3">
      <label for="entreprise" class="form-label">Entreprise</label>
      <input type="text" class="form-control" name="entreprise" value="{{ stage.getEntreprise() }}" required>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea class="form-control" name="description" rows="5" required>{{ stage.getDescription() }}</textarea>
    </div>

    <!-- ✅ Case à cocher pour disponibilité -->
    <div class="form-check form-switch mb-3">
      <input class="form-check-input" type="checkbox" name="disponible" id="disponibleSwitch"
        {% if stage.isDisponible() %}checked{% endif %}>
      <label class="form-check-label" for="disponibleSwitch">Disponible</label>
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a href="/admin/stages" class="btn btn-secondary">Annuler</a>
  </form>
</div>
{% endblock %}
