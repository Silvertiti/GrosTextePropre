{% extends "layout.html.twig" %}

{% block content %}
<div class="container mt-4">
    <h2>Profil du Pilote de Promotion</h2>
    
    {% if tuteur %}
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">{{ tuteur.getName() }}</h4>
            <p class="card-text"><strong>Email :</strong> {{ tuteur.getEmail() }}</p>
            <p class="card-text"><strong>Promotion :</strong> {{ tuteur.getPromotion() }}</p>
        </div>
    </div>
    {% else %}
    <div class="alert alert-warning">Pilote introuvable.</div>
    {% endif %}
    
    <a href="/gestion-pilotes" class="btn btn-secondary mt-3">Retour</a>
</div>
{% endblock %}