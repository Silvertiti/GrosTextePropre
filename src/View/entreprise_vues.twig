{% extends "layout.html.twig" %}

{% block title %}Statistiques de vues{% endblock %}

{% block content %}
<div class="container my-5">
  <h1 class="mb-4">Statistiques des vues sur vos offres de stage</h1>

  {% if vuesStages is not empty %}
    {% for item in vuesStages %}
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">{{ item.stage.getTitre() }}</h5>
          <p class="card-text">
            <strong>Nombre total de vues : </strong>{{ item.total }}
          </p>

          {% if item.vues %}
            <div class="table-responsive">
              <table class="table table-striped mt-3">
                <thead>
                  <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Date et heure de la vue</th>
                  </tr>
                </thead>
                <tbody>
                  {% for vue in item.vues %}
                    <tr>
                      <td>{{ vue.getUser().getNom() }}</td>
                      <td>{{ vue.getUser().getPrenom() }}</td>
                      <td>{{ vue.getViewedAt().format('d/m/Y H:i') }}</td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          {% else %}
            <p class="text-muted">Aucune vue enregistrée pour cette offre.</p>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  {% else %}
    <div class="alert alert-info">Vous n'avez encore publié aucune offre.</div>
  {% endif %}
</div>
{% endblock %}
